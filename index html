<script>
// Typing Effect
let text="Rule The Style. Wear The Power.";let i=0;
function type(){if(i<text.length){document.getElementById("typing").innerHTML+=text.charAt(i);i++;setTimeout(type,50);}}type();

// Scroll
function scrollToSection(){document.getElementById("collections").scrollIntoView({behavior:"smooth"});}

// Cart
let total=0;
function addToCart(name,price){let li=document.createElement("li");li.textContent=name+" - â‚¹"+price;document.getElementById("cartItems").appendChild(li);total+=price;document.getElementById("total").innerText=total;document.getElementById("cartBox").style.display="block";}

// Theme Toggle + Sound
function toggleTheme(){document.body.classList.toggle("gold-mode");let audio=new Audio('https://www.soundjay.com/button/sounds/button-16.mp3');audio.play();}

// Countdown
let countDate=new Date().getTime()+86400000;
setInterval(function(){let now=new Date().getTime();let gap=countDate-now;
let h=Math.floor((gap%(1000*60*60*24))/(1000*60*60));
let m=Math.floor((gap%(1000*60*60))/(1000*60));
let s=Math.floor((gap%(1000*60))/1000);
document.getElementById("countdown").innerText="Limited Drop Ends In: "+h+"h "+m+"m "+s+"s";},1000);

// Scroll Progress
window.onscroll=function(){let winScroll=document.body.scrollTop||document.documentElement.scrollTop;
let height=document.documentElement.scrollHeight-document.documentElement.clientHeight;
let scrolled=(winScroll/height)*100;
document.getElementById("progress").style.width=scrolled+"%";};

// AI Suggest
function suggest(){let styles=["Go with Royal Formal for elite vibe ðŸ‘”","Street Emperor suits bold mood ðŸ”¥","Winter Luxe for premium comfort â„"];
document.getElementById("suggestion").innerText=styles[Math.floor(Math.random()*styles.length)];}
setTimeout(()=>{document.getElementById("assistant").style.display="block";},5000);

// Galaxy Stars
const canvas=document.getElementById("stars");const ctx=canvas.getContext("2d");
canvas.width=window.innerWidth;canvas.height=window.innerHeight;
let stars=[];
for(let i=0;i<400;i++){stars.push({x:Math.random()*canvas.width,y:Math.random()*canvas.height,r:Math.random()*2});}
function draw(){ctx.clearRect(0,0,canvas.width,canvas.height);ctx.fillStyle="white";
stars.forEach(s=>{ctx.beginPath();ctx.arc(s.x,s.y,s.r,0,2*Math.PI);ctx.fill();s.y+=0.3;if(s.y>canvas.height)s.y=0;});requestAnimationFrame(draw);}
draw();

// Shooting Stars
function createShootingStar(){let star=document.createElement("div");star.className="shooting-star";
star.style.top=Math.random()*window.innerHeight+"px";
star.style.left=Math.random()*window.innerWidth+"px";
document.body.appendChild(star);
setTimeout(()=>{star.remove();},2000);}
setInterval(createShootingStar,3000);

// 3D Card Mouse Rotation
function rotateCard(e,card){
let rect=card.getBoundingClientRect();
let x=(e.clientX-rect.left-rect.width/2)/10;
let y=(e.clientY-rect.top-rect.height/2)/10;
card.style.transform=`rotateY(${x}deg) rotateX(${-y}deg) translateZ(0px)`;
}
function resetCard(card){card.style.transform="rotateY(0deg) rotateX(0deg)";}
</script>
